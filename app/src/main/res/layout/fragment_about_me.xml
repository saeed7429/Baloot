<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AboutMeFragment">

    <View
        android:id="@+id/aboutMeFragmentHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/dark_green"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/aboutMeFragmentHeader"
        app:layout_constraintBottom_toBottomOf="@id/aboutMeFragmentHeader"
        android:textSize="16sp"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/about_me" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/aboutMeFragmentHeader"
        android:textSize="14sp"
        android:padding="16dp"
        android:text="@string/about_me_text" />

</androidx.constraintlayout.widget.ConstraintLayout>